<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_user_relatorio">

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutRetangulo"
            android:layout_width="360dp"
            android:layout_height="188dp"
            android:layout_margin="15sp"
            android:background="@drawable/fundo_cinza"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:text="Relatório"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="     Em sua opinião, qual doi a intensidade deste ataque de ansiedade?"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btGerar"
            android:layout_width="155dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:backgroundTint="#8C00ffff"
            android:fontFamily="casual"
            android:text="Gerar"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btVoltar"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:backgroundTint="#8C00ffff"
            app:srcCompat="?attr/homeAsUpIndicator" />

    </LinearLayout>
</FrameLayout>
