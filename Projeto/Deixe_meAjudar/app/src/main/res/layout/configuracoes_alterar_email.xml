<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_configuracoes" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/layoutRetangulo"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.36"
            android:background="@drawable/fundo_cinza"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/layoutTitulo"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    app:srcCompat="@drawable/icone_configuracoes" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.49"
                    android:text="Configurações"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutTxts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:layout_weight="0.41"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/txtNewEmail"
                    style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
                    android:layout_width="332dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.07"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Digite aqui seu novo email "
                    android:inputType="textPersonName"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/txtConfirmacao"
                    style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.07"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Confirme seu novo email "
                    android:inputType="textPersonName"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBts"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/btAlterar"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="0.42"
                android:background="#96ff9966"
                android:fontFamily="casual"
                android:text="Alterar"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btVoltar"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="#96ff9966"
                app:srcCompat="?attr/homeAsUpIndicator" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
