<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_user_relatorio">
    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutRetangulo"
            android:layout_width="380dp"
            android:layout_height="340dp"
            android:layout_margin="5sp"
            android:background="@drawable/fundo_cinza"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutTitulo"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icone_relatorio" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:text="RelatÃ³rio"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtConteudo"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_margin="12sp"
                android:fontFamily="sans-serif-condensed"
                android:text="CONTEUDO CONTEUDO CONTEUDO CONTEUDO CONTEUDO"
                android:textAlignment="center"
                android:textSize="22sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btVoltar"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:backgroundTint="#8C00ffff"
            app:srcCompat="?attr/homeAsUpIndicator" />

    </LinearLayout>
</FrameLayout>
