<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_user_relatorio">

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutRetangulo"
            android:layout_width="360dp"
            android:layout_height="230dp"
            android:layout_margin="15sp"
            android:background="@drawable/fundo_cinza"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:text="Relatório"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Qual sintoma você sentiu e não foi citado ?"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtSintoma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Digite aqui seu sintoma"
                android:inputType="textPersonName"
                android:textAlignment="textStart" />

            <ImageButton
                android:id="@+id/btAdicionarSintoma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10sp"
                android:backgroundTint="#8C00ffff"
                app:srcCompat="@android:drawable/ic_menu_add" />
        </LinearLayout>

        <Button
            android:id="@+id/btConcluirAdd"
            android:layout_width="155dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:backgroundTint="#8C00ffff"
            android:fontFamily="casual"
            android:text="Adicionar"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btVoltar"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:backgroundTint="#8C00ffff"
            app:srcCompat="?attr/homeAsUpIndicator" />

    </LinearLayout>
</FrameLayout>
