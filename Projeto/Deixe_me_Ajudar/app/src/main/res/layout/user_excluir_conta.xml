<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_user_informacoes">

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutTitulo"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/icone_informacao" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:text="Excluir Conta"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRetangulo"
            android:layout_width="380dp"
            android:layout_height="340dp"
            android:layout_margin="5sp"
            android:background="@drawable/fundo_cinza"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="9sp"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirme sua senha:"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <EditText
                android:id="@+id/etSenhaExcluirConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9sp"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnUserExcluirConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="9sp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:fontFamily="casual"
                android:text="Excluir Conta"
                android:textAlignment="center"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnVoltarMenuPrincipalUser"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/holo_red_dark"
            app:srcCompat="?attr/homeAsUpIndicator" />

    </LinearLayout>
</FrameLayout>
