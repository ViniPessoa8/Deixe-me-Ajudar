<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/PlanoDeFundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_configuracoes" />

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="389dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/layoutRetangulo"
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:background="@drawable/fundo_cinza"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/layoutTitulo"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_margin="15sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icone_configuracoes" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Configurações"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textSize="30sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtMensagem"
                android:layout_width="268dp"
                android:layout_height="104dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="serif"
                android:text="     Você tem certeza que deseja desativar sua conta ?"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="26sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/btnDesativar"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:background="#96ff9966"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_margin="15sp"
                android:layout_gravity="center_horizontal"
                android:text="Desativar"
                android:layout_weight="0.25" />

            <ImageButton
                android:id="@+id/btVoltar"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="#96ff9966"
                app:srcCompat="?attr/actionModeCloseDrawable" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
