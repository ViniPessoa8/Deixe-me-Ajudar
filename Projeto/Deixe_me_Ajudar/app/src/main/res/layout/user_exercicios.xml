<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_user_exercicios">

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/layoutTitulo"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icone_exercicios" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Exercícios"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textSize="25sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnUserMeditacoes"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15sp"
            android:layout_weight="0.09"
            android:backgroundTint="#96ff8080"
            android:fontFamily="casual"
            android:text="Meditações"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnUserVideos"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15sp"
            android:backgroundTint="#96ff8080"
            android:fontFamily="casual"
            android:text="Vídeos"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnUserOutros"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15sp"
            android:backgroundTint="#96ff8080"
            android:fontFamily="casual"
            android:text="Outros"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btnVoltarExercicios"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:backgroundTint="#96ff8080"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/btnExerciciosFavoritos"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10sp"
            android:backgroundTint="#96ff8080"
            android:fontFamily="casual"
            android:text="Meus favoritos"
            android:textColor="@android:color/white" />

    </LinearLayout>
</FrameLayout>
