<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_inicio">

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/layoutRetangulo"
            android:layout_width="357dp"
            android:layout_height="380dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.39"
            android:background="@drawable/fundo_cinza"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutTitulo"
                android:layout_width="290dp"
                android:layout_height="62dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icone_cadastro" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.05"
                    android:fontFamily="sans-serif"
                    android:text="Cadastro"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textSize="25sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtEmailCadastro"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Digite aqui seu email "
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtNome"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Digite aqui seu Nome"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtSenhaCadastro"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Digite aqui sua senha"
                android:inputType="textPassword"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtConfirmacaoCadastro"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Confime sua senha"
                android:inputType="textPassword"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5sp"
            android:backgroundTint="#66006400"
            android:fontFamily="casual"
            android:text="Cadastrar"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnVoltarInicioCadastro"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_weight="0.15"
            android:backgroundTint="#66006400"
            app:srcCompat="?attr/homeAsUpIndicator" />
    </LinearLayout>
</FrameLayout>
